---
export interface Props {
  name: string;
  link: string;
  image?: string;
  technologies: string[];
}
const { name, image, link, technologies } = Astro.props;
---

<div
  class="group relative grid gap-4 pb-1 transition-all sm:grid-cols-8 sm:gap-8 md:gap-4 lg:hover:!opacity-100 lg:group-hover/list:opacity-50"
>
  <div
    class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block lg:group-hover:bg-stone-800/50 lg:group-hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] lg:group-hover:drop-shadow-lg"
  >
  </div><div class="z-10 sm:order-2 sm:col-span-6">
    <h3>
      <a
        class="group/link inline-flex items-baseline text-base font-medium leading-tight text-stone-200 hover:text-orange-300 focus-visible:text-orange-300"
        href={link}
        target="_blank"
        rel="noreferrer noopener"
        aria-label="Spotify Profile (opens in a new tab)"
        ><span class="absolute -inset-x-4 -inset-y-2.5 hidden rounded md:-inset-x-6 md:-inset-y-4 lg:block"></span><span
          >{name}<!-- -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="transtone-y-px group-hover/link:-transtone-y-1 group-hover/link:transtone-x-1 group-focus-visible/link:-transtone-y-1 group-focus-visible/link:transtone-x-1 ml-1 inline-block h-4 w-4 shrink-0 transition-transform motion-reduce:transition-none"
            aria-hidden="true"
            ><path
              fill-rule="evenodd"
              d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z"
              clip-rule="evenodd"></path></svg
          ></span
        ></a
      >
    </h3>
    <slot name="description" />
    <ul class="mt-2 flex flex-wrap" aria-label="Technologies used:">
      {
        technologies.map((tech) => (
          <li class="mr-1.5 mt-2">
            <div class="flex items-center rounded-full bg-orange-400/10 px-3 py-1 text-xs font-medium leading-5 text-orange-300">
              {tech}
            </div>
          </li>
        ))
      }
    </ul>
  </div>
  {
    image && (
      <img
        alt={`Screenshot of the ${name} project`}
        loading="lazy"
        width="200"
        height="48"
        decoding="async"
        data-nimg="1"
        class="sm:transtone-y-1 rounded border-2 border-stone-200/10 transition group-hover:border-stone-200/30 sm:order-1 sm:col-span-2"
        style="color:transparent"
        src={image}
      />
    )
  }
</div>
