---
import Button from "@/components/Button.astro";
import NavLink from "@/components/NavLink.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;

//import "../styles/base.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Hey there! I'm Fatih, a passionate developer with a hunger for learning and a knack for picking up new technologies quickly"
    /><meta name="image" content="/og.png" /><meta property="og:locale" content="en_US" /><meta
      property="og:site_name"
      content="Fatih Aslancan"
    /><meta property="og:type" content="website" /><meta property="twitter:card" content="summary_large_image" /><meta
      property="twitter:creator"
      content="@F4tihAslancan"
    /><meta property="twitter:site" content="@bchiang7" /><meta property="og:title" content="Fatih Aslancan" /><meta
      property="og:description"
      content="Hey there! I'm Fatih, a passionate developer with a hunger for learning and a knack for picking up new technologies quickly"
    /><meta property="og:url" content="/" /><meta property="og:image" content="/og.png" /><meta
      property="twitter:title"
      content="Fatih Aslancan"
    /><meta
      property="twitter:description"
      content="Hey there! I'm Fatih, a passionate developer with a hunger for learning and a knack for picking up new technologies quickly"
    /><meta property="twitter:url" content="/" /><meta property="twitter:image" content="/og.png" /><link
      rel="icon"
      type="image/png"
      sizes="512x192"
      href="/favicon/android-chrome-512x512.png"
    /><link rel="icon" type="image/png" sizes="192x192" href="/favicon/android-chrome-192x192.png" /><link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    /><link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" /><link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    /><link rel="manifest" href="/site.webmanifest" /><meta name="msapplication-TileColor" content="#fdba74" /><meta
      name="theme-color"
      content="#fdba74"
    />
    <title>{title}</title>
    <style>
      @font-face {
        font-family: "Inter";
        src: url("/fonts/InterVariable.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>

  <body
    class="scroll-smooth bg-stone-900 leading-relaxed text-stone-100 antialiased selection:bg-orange-300 selection:text-stone-900"
  >
    <div class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0">
      <div class="lg:flex lg:justify-between lg:gap-4">
        <nav class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24">
          <div class="flex flex-col gap-2">
            <a href="/">
              <h1 class="text-3xl"><span class="text-orange-300">Fatih</span> Aslancan</h1>
            </a>

            <h3 class="text-2xl">Software Engineer</h3>
            <p class="w-[50ch] text-stone-300">
              Hey there! I'm <span class="text-orange-300">Fatih</span>, a passionate developer with a hunger for learning
              and a knack for picking up new technologies quickly
            </p>
          </div>
          <div class="flex flex-col gap-4">
            <NavLink href="/about">About</NavLink>
            <NavLink href="/experience">Experience</NavLink>
            <NavLink href="/projects">Projects</NavLink>
            <NavLink href="/personal-projects">Personal Projects</NavLink>
            <NavLink href="/contact">Contact</NavLink>
          </div>
          <ul class="ml-1 mt-8 flex items-center" aria-label="Social media">
            <li class="mr-5 shrink-0 text-xs">
              <a
                class="block hover:text-orange-300"
                href="https://github.com/ft-aslan"
                target="_blank"
                rel="noreferrer noopener"
                aria-label="GitHub (opens in a new tab)"
                title="GitHub"
                ><span class="sr-only">GitHub</span><svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  class="h-6 w-6"
                  aria-hidden="true"
                  ><path
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
                  ></path></svg
                ></a
              >
            </li><li class="mr-5 shrink-0 text-xs">
              <a
                class="block hover:text-orange-300"
                href="https://www.linkedin.com/in/fatih-aslancan-2100b8138/"
                target="_blank"
                rel="noreferrer noopener"
                aria-label="LinkedIn (opens in a new tab)"
                title="LinkedIn"
                ><span class="sr-only">LinkedIn</span><svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="h-6 w-6"
                  aria-hidden="true"
                  ><path
                    d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"
                  ></path></svg
                ></a
              >
            </li>
          </ul>
        </nav>
        <main class="pt-24 lg:w-1/2 lg:py-24">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
