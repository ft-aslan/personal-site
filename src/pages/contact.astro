---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Contact">
  <section id="contact" class="mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24" aria-label="Contact">
    <h2 class="mb-6 text-sm font-bold uppercase tracking-widest text-orange-300">Contact</h2>
    <div>
      <p class="mb-4">
        If you have any questions or would like to get in touch, feel free to use the form below. I'm always looking to
        expand my knowledge and collaborate with others. You can also reach me via email at <a
          class="text-orange-300 underline"
          href="mailto:fatihaslancan1337@gmail.com">fatihaslancan1337@gmail.com</a
        >.
      </p>
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        data-netlify-honeypot="bot-field"
        action="/success"
        class="grid grid-cols-1 gap-4"
      >
        <input type="hidden" name="bot-field" />
        <input type="hidden" name="form-name" value="contact" />
        <div>
          <label class="sr-only" for="name">Name</label>
          <input
            id="name"
            name="name"
            type="text"
            placeholder="Name"
            required
            class="w-full rounded border border-stone-300 bg-stone-800 px-4 py-2 text-stone-100 focus:border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300"
          />
        </div>
        <div>
          <label class="sr-only" for="email">Email</label>
          <input
            id="email"
            name="email"
            type="email"
            placeholder="Email"
            required
            class="w-full rounded border border-stone-300 bg-stone-800 px-4 py-2 text-stone-100 focus:border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300"
          />
        </div>
        <div>
          <label class="sr-only" for="message">Message</label>
          <textarea
            id="message"
            name="message"
            placeholder="Message"
            required
            class="w-full rounded border border-stone-300 bg-stone-800 px-4 py-2 text-stone-100 focus:border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300"
          ></textarea>
        </div>
        <div>
          <button
            type="submit"
            class="w-full rounded bg-orange-300 px-4 py-2 text-stone-900 hover:bg-orange-400 focus:outline-none focus:ring-2 focus:ring-orange-300"
            >Submit</button
          >
        </div>
      </form>
    </div>
  </section>
</Layout>
